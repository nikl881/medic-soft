{% extends 'base.html.twig' %}

{% block title %}MedicSoft | Patient intake {% endblock %}

{% block main %}
    <div class="container">
        {{ include('patient/includes/_proces_treatment_status.html.twig') }}
        <hr class="border-warning">
        <div class="col-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mt-3">
                <h1 class="text-center">Intake </h1>
                <h3 class="text-right">Completion 1/3</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="card">
                    <div class="card-header"><strong>Reason for intake</strong> Step 1</div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-horizontal">
                            <div class="form-group row">
                                <label class="col-md-3"><strong>1</strong> Direct medical reason for
                                    intake?</label>
                                <div class="col-md-9">
                                    {{ form_row(form.indication, {'label':false}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3"><strong>2</strong> Pain indication on scale from 1
                                    to 10?</label>
                                <div class="col-md-9">
                                    <div class="d-flex justify-content-between">
                                        <p>1</p>
                                        <div class="form-group custom-range-score-width"> {{ form_row(form.painIndication, {'label':false}) }}</div>
                                        <p>10</p>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3"><strong>3</strong> Referral to another healthcare
                                    provider or patients own initiative?</label>
                                <div class="col-md-9">
                                   {{ form_row(form.refferal, {'label':false}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-primary" type="submit"> Submit</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col-3"></div>
            <div class="col-3">
                <div class="card">
                    <div class="card-header">Intake forms</div>
                    <div class="card-body">
                    <ul class="list-group bg-white">
                        <li class="list-group-item active"><strong>Form 1</strong> Reason for intake</li>
                        <li class="list-group-item"><strong>Form 2</strong> Additional information</li>
                        <li class="list-group-item"><strong>Form 3</strong> Determination follow-up</li>
                    </ul>
                </div>
                </div>
            </div>
        </div>
    </div>
    {% block customjavascripts %}
    {% endblock %}
{% endblock %}