{% extends 'base.html.twig' %}

{% block title %}MedicSoft | Patient intake {% endblock %}

 {% block breadcrumb %}
     <nav aria-label="breadcrumb ">
         <ol class="breadcrumb bg-white">
             <li class="breadcrumb-item active">Intake</li>
             <li class="breadcrumb-item"><a href="#">Diagnosis</a></li>
             <li class="breadcrumb-item"><a href="#">Treatment</a></li>
             <li class="breadcrumb-item"><a href="#">Aftercare</a></li>
             <li class="ml-auto" aria-current="page">
                 <div class=" px-3 d-flex align-items-center custom-bar-color "><i
                             class="fas fa-calendar"></i>&nbsp; {{ "now"|date("m/d/Y") }}&nbsp;&nbsp;
                     <i class="fas fa-clock"></i>&nbsp;<div id='time-part'></div>
                 </div>
             </li>
         </ol>
     </nav>
 {% endblock breadcrumb %}

{% block main %}
    <div class="container">
        <a href="{{ path('patient_details',{'patient':patient.id}) }}">
            <btn class="btn btn-dark disabled custom-margin"><i class="fas fa-chevron-left"></i> Return to patient card</btn>
        </a>
        {{ include('patient/includes/_proces_treatment_status.html.twig') }}
        <div class='outer'>
            <div class='inner2'></div>
        </div>
        <div class="col-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mt-3">
                <h1 class="text-center"><strong>Intake </strong><small>patient {{ patient.lastName }}</small></h1>
                <div class="btn btn-dark text-right disabled"> Part 2/3</div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="card">
                    <div class="card-header"><strong>Additional information</strong> Step 2</div>
                    <div class="card-body">
                         {{ form_start(form) }}
                        <div class="form-horizontal">
                            <div class="form-group row">
                                <label class="col-md-3"><strong>1</strong> What urgency do you estimate? </label>
                                <div class="col-md-9">
                                     {{ form_row(form.urgency, {'label':false}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3"><strong>3</strong> Explanation of the urgency </label>
                                <div class="col-md-9">
                                     {{ form_row(form.urgencyComment, {'label':false}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-primary" type="submit">Save</button>
                    </div>
                     {{ form_end(form) }}
                </div>
            </div>
            <div class="col-3"></div>
            <div class="col-3">
                <div class="card">
                    <div class="card-header text-center">
                        <div class="btn-group" role="group" aria-label="Custom pagination">
                            <a href="{{ path('patient_intake_part_one',{'patient':patient.id}) }}">
                                <button type="button" class="btn btn-sm btn-dark">Back</button>
                            </a>
                            <a href="{{ path('patient_intake_part_three',{'patient':patient.id}) }}">
                            <button type="button" class="btn btn-sm btn-dark border-left">Next</button>
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <ul class="list-group bg-white">
                            <li class="list-group-item"><a href="{{ path('patient_intake_part_one',{'patient':patient.id}) }}"> <strong>Step 1</strong> Reason for intake</a></li>
                            <li class="list-group-item active"><strong>Step 2</strong> Additional information</li>
                            <li class="list-group-item"><a href="{{ path('patient_intake_part_three',{'patient':patient.id}) }}"><strong>Step 3</strong> Determination follow-up</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block customjavascripts %}
    {% endblock %}
{% endblock %}