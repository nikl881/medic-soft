{% extends 'base.html.twig' %}

{% block title %}MedicSoft | Doctor list{% endblock %}

{% block main %}
    <div class="container">
        <h1>Table of MD employees</h1>
        <div class="mb-2 mt-3">
             <button class="btn btn-secondary hideshow" data-id="tr1"><i class="fas fa-sort"></i>Sort name A-Z</button>
        </div>
        <div class="navigation">
            <div class="count">
               Total records: {{ users.getTotalItemCount }}
            </div>
        </div>
    <div class="row">
        <div class="col-3">
{#        {{ form_start(form) }}#}
{#                {{ form_row(form.lastName) }}#}
{#                {{ form_row(form.select) }}#}
{#        {{ form_end(form) }}#}
        </div>
        <div class="col-9">
        </div>
    </div>
    <table class="table table-striped border-secondary">
    <thead>
    <tr>
        <th scope="col">{{ knp_pagination_sortable(users, 'lastName', 'v.lastName') }} &nbsp;<i class="fas fa-sort"></i></th>
        <th scope="col"></th>
        <th scope="col">{{ knp_pagination_sortable(users, 'medicalSpecialty', 'v.medicalSpecialty') }} &nbsp;<i class="fas fa-sort"></i></th>
        <th scope="col">Email</th>
        <th scope="col">Phone number</th>
        <th scope="col">{{ knp_pagination_sortable(users, 'location', 'v.location') }} &nbsp;<i class="fas fa-sort"></i></th>
        <th scope="col">Details</th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.lastName }}, {{ user.name|first }}</td>
            <td><img class="c-avatar-img table-avatar-img" src="{{ user.profileImage }}" alt="avatar"></td>
            <td>{{ user.medicalSpecialty }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.phoneNumber }}</td>
            <td>{{ user.location }}</td>
            <td><i class="fas fa-eye" data-toggle="modal" data-target="#exampleModal{{ user.name }}"></i>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    </table>


    {% for user in users %}
        <div class="modal fade" id="exampleModal{{ user.name }}" tabindex="-1" role="dialog"
             aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-user"></i> Employee information
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <img src="{{ user.profileImage }}" height="100" alt="profile avatar">
                        {{ include('doctor_table_index/modal/doctor_details_modal.html.twig') }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

    <div class="navigation">
        Navigation: {{ knp_pagination_render(users) }}
    </div>

{% endblock %}