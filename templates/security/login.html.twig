{% extends 'base.unauthorized.html.twig' %}

{% block title %}MedicSoft | login{% endblock %}

{% block main %}
    <div class="container">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div class="row justify-content-center">
            <div class="col-md-8">
                <img src="{{ asset('build/images/medicsoft_transparent.png') }}" class="rounded mx-auto d-block mb-4  img-fluid" alt="main logo" style="max-height: 60px;"/>
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            <form method="post">
                                <h1>Login</h1>
                                <p class="text-muted">Sign In to your account</p>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fa fa-user"></i>
                                        </div>
                                    </div>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                           class="form-control" required autofocus>
                                </div>
                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fa fa-lock"></i>
                                        </div>
                                    </div>
                                    <input type="password" name="password" id="inputPassword" class="form-control"
                                           required>
                                </div>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}">

                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary px-4" type="submit">Login</button>
                                    </div>
                                    <div class="col-6 text-right">
                                        <button class="btn btn-link px-0" type="button">Forgot password?</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                        <div class="card-body text-center">
                            <div>
                                <h2>MedicSoft</h2>
                                <p>Welcome to the login page of My MedicSoft. If you already have an account, you can log in here and start using the app.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
