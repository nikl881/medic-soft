{% extends 'base.html.twig' %}

{% block title %}MedicSoft | Doctor list{% endblock %}

{% block main %}
    <div class="container">
        <h1>Table of MD employees</h1>

        <table class="table table-striped border-secondary">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col"></th>
                <th scope="col">Medical specialism</th>
                <th scope="col">Email</th>
                <th scope="col">Phone number</th>
                <th scope="col">Location</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}

            <tr>
                <td>{{ user.lastName }}, {{ user.name|first }}</td>
                <td><img class="c-avatar-img" src="{{ user.profileImage }}" alt="avatar" style="max-height: 30px"></td>
                <td>{{ user.medicalSpecialty }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.location }}</td>
                <td><i class="fas fa-eye"></i> &nbsp; <i class="fas fa-edit"></i></td>
                {% endfor %}
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}